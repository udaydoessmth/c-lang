#include <stdio.h>

int factorial(int n){
    if(n == 1 || n == 0){
        return 1;
    }
    else{
    return (n * factorial(n-1));
    }
}
int main() {
    int n;
    printf("enter the number you want the factorial of: ");
    scanf("%d",&n);
    printf("the factorial of %d is %d", n, factorial(n));
    return 0;
}
